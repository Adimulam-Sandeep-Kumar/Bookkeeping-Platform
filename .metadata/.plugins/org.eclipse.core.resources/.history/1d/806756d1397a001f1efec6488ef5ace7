package com.example.bookkeeping.service;

import com.example.bookkeeping.model.Budget;
import com.example.bookkeeping.repository.BudgetRepository;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.List;

@Service
public class BudgetService {

    @Autowired
    private BudgetRepository budgetRepository;

    public List<Budget> getAllBudgets() {
        return budgetRepository.findAll();
    }

    public Budget createBudget(Budget budget) {
        return budgetRepository.save(budget);
    }
    
    public Budget updateSpentAmount(String account, double amount) {
        Budget budget = budgetRepository.findById(account).orElseThrow(() -> new RuntimeException("Budget not found"));
        budget.setSpentAmount(budget.getSpentAmount() + amount);
        return budgetRepository.save(budget);
    }
}
